<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/bg">

    <LinearLayout
        android:id="@+id/group_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/text2"
        android:paddingBottom="1dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/group_header_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_background_groups"
            android:gravity="center"
            android:minWidth="@dimen/ten"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="?attr/t3"
            android:textSize="@dimen/list_label2"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="@dimen/circle_diameter"
            android:layout_height="@dimen/circle_diameter"
            android:layout_weight="0"
            android:background="@drawable/circle"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginRight="8dp"
            android:minHeight="@dimen/min_row_height"
            android:textColor="?attr/t3"
            android:textSize="@dimen/list_label"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/text1"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:minHeight="@dimen/min_row_height"
            android:minWidth="@dimen/ten"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:textColor="?attr/t2"
            android:textSize="@dimen/list_label"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/penalty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="end|center_vertical"
            android:minHeight="@dimen/min_row_height"
            android:paddingBottom="4dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:text="@string/empty"
            android:textColor="@color/red"
            android:textSize="@dimen/list_label"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="end|center_vertical"
            android:minHeight="@dimen/min_row_height"
            android:paddingBottom="4dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:text="@string/notime"
            android:textColor="?attr/t2"
            android:textSize="@dimen/list_label"
            android:textStyle="bold">

        </TextView>

        <View
            android:id="@+id/view1"
            android:layout_width="0.1dp"
            android:layout_height="fill_parent"
            android:background="?attr/div" />

        <TextView
            android:id="@+id/points"
            android:layout_width="@dimen/points_column_width"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:gravity="end|center_vertical"
            android:minHeight="@dimen/min_row_height"
            android:paddingBottom="4dp"
            android:paddingStart="0dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:text="@string/empty"
            android:textColor="?attr/t2"
            android:textSize="@dimen/list_label"
            android:textStyle="bold">

        </TextView>


    </LinearLayout>

</LinearLayout>