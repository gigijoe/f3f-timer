<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/number"
        android:layout_width="@dimen/circle_diameter"
        android:layout_height="@dimen/circle_diameter"
        android:layout_weight="0"
        android:background="@drawable/circle"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginEnd="8dp"
        android:minHeight="@dimen/min_row_height"
        android:textColor="?attr/t3"
        android:textSize="16sp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:minHeight="88dp"
        android:paddingBottom="4dp"
        android:paddingStart="10dp"
        android:paddingEnd="30dp"
        android:paddingTop="4dp"
        android:textColor="?attr/t2"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_up"
        android:layout_width="@dimen/circle_diameter"
        android:layout_height="@dimen/circle_diameter"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="@dimen/ten"
        android:layout_weight="0"
        android:background="@mipmap/up"
        android:contentDescription="@string/button_up"
        android:clickable="true"
        android:focusable="true"
        android:onClick="moveUp" />

    <Button
        android:id="@+id/button_down"
        android:layout_width="@dimen/circle_diameter"
        android:layout_height="@dimen/circle_diameter"
        android:layout_gravity="end|center_vertical"
        android:layout_marginStart="@dimen/ten"
        android:background="@mipmap/down"
        android:contentDescription="@string/button_down"
        android:clickable="true"
        android:focusable="true"
        android:onClick="moveDown" />


</LinearLayout>