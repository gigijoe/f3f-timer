<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Default Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:actionBarStyle">@style/carbonActionBar</item>
        <item name="bg">@color/black</item>
        <item name="bg2">@color/text1</item>
        <item name="t1">@color/text</item>
        <item name="t2">@color/text3</item>
        <item name="t3">@color/text2</item>
        <item name="t4">@color/text3</item><!-- Group headings BG -->
        <item name="grad_fade">@color/black</item>
        <item name="div">@color/border</item>
    </style>

    <style name="AppTheme.Overlay" parent="Theme.Overlay">
        <item name="bg">@color/black</item>
        <item name="bg2">@color/text1</item>
        <item name="bg3">@color/dark_grey</item>
        <item name="t1">@color/text</item>
        <item name="t2">@color/text3</item>
        <item name="t3">@color/text2</item>
        <item name="t4">@color/text3</item><!-- Group headings BG -->
        <item name="div">@color/border</item>
    </style>

    <style name="AppTheme.Transparent" parent="AppTheme.Overlay">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColorPrimary">@color/text2</item>
    </style>

