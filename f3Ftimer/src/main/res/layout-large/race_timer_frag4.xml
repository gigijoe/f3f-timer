    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/number"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_weight="0"
                android:background="@drawable/circle"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:minHeight="68dp"
                android:textColor="@color/text2"
                android:textSize="16sp"
                android:textStyle="bold" >

            </TextView>
            <TextView
                android:id="@+id/current_pilot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/empty"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/text3" >
            </TextView>
        </LinearLayout>

		<TextView
		    android:id="@+id/time"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/zero"
		    android:layout_gravity="center_horizontal"
		    android:textColor="@color/text3"
		    android:textSize="100sp" >

		</TextView>
		
		<TextView
		    android:id="@+id/status"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="@string/on_course"
		    android:layout_gravity="center_horizontal"
		    android:textColor="@color/text3"
		    android:textAppearance="?android:attr/textAppearanceLarge" >
		</TextView>
		
		<TextView
                android:id="@+id/wind_warning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/warning" 
                android:visibility="invisible" 
                android:text="@string/wind_warning"
                android:textAppearance="?android:attr/textAppearanceMedium"
            	android:textColor="@color/text_warning" />     
		<LinearLayout android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">

			<TextView
			    android:id="@+id/lap"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="left"
			    android:layout_weight="1"
			    android:text="@string/empty"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textColor="@color/text3" >
	
			</TextView>
			
			<TextView
			    android:id="@+id/estimated"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_gravity="right"
			    android:layout_weight="1"
			    android:text="@string/empty"
			    android:textAppearance="?android:attr/textAppearanceLarge"
			    android:textColor="@color/text3" >
	
			</TextView>
		</LinearLayout>
        <LinearLayout
            	android:layout_width="fill_parent"
            	android:layout_height="wrap_content"
            	android:orientation="horizontal"
			    android:layout_marginTop="@dimen/twenty"
            	style="?android:attr/buttonBarButtonStyle">

            <Button
                android:id="@+id/base_A"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/text2"
                android:textSize="50sp"
                android:text="@string/A"
                android:visibility="gone"
                android:background="@drawable/soft_buzzer" />

            <Button android:id="@+id/button_abort"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="@string/abort"
                style="?android:attr/buttonBarButtonStyle"/>

            <Button android:id="@+id/button_refly"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/refly"
                android:visibility="gone"
                style="?android:attr/buttonBarButtonStyle"/>
            
            <Button android:id="@+id/button_finish"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:text="@string/finish"
                android:visibility="gone"
                style="?android:attr/buttonBarButtonStyle"/>
            <Button
                android:id="@+id/base_B"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:textColor="@color/text2"
                android:textSize="50sp"
                android:text="@string/B"
                android:visibility="gone"
                android:background="@drawable/soft_buzzer" />
		</LinearLayout>
</LinearLayout>
