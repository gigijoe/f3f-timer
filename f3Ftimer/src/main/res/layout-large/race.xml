<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/listview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/bg"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/bg2">

        <TextView
            android:id="@+id/race_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="@string/empty"
            android:textColor="?attr/t3"
            android:textSize="32sp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            android:text="@string/empty"
            android:textColor="?attr/t3"
            android:textSize="32sp"
            android:textStyle="bold">

        </TextView>

        <ImageView
            android:id="@+id/external_display_connection_status"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="4dp"
            android:layout_marginTop="2dp"
            android:layout_gravity="center_vertical" />

        <ImageView
            android:id="@+id/connection_status"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <TextView
        android:id="@+id/results_ip"
        android:background="?attr/bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="0"
        android:lines="1"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="30dp"
        android:textColor="?attr/t2"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone">

    </TextView>

    <TextView
        android:id="@+id/wind_readings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="0"
        android:lines="1"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="30dp"
        android:background="?attr/t3"
        android:textColor="?attr/bg"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cacheColorHint="?attr/bg"
        android:divider="?attr/div"
        android:dividerHeight="2dp"
        android:drawSelectorOnTop="false"
        android:listSelector="?attr/bg" />

</LinearLayout>